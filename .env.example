# Environment Variables for Todo Application

# Database Configuration (from Spec 1)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Authentication Configuration (Spec 2)
# Generate a strong secret using: python -c "import secrets; print(secrets.token_urlsafe(32))"
BETTER_AUTH_SECRET=your-secret-here-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_SECONDS=86400

# Application Configuration
APP_NAME=Todo Backend API
APP_VERSION=2.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
